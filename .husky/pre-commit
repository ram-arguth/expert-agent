#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit checks - must pass before commit
echo "ğŸ” Running pre-commit checks..."

# 1. Lint staged files
echo "ğŸ“ Running lint..."
