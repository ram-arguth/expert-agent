#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit checks - must pass before commit
echo "ğŸ” Running pre-commit checks..."

# 1. Lint staged files
echo "ğŸ“ Running lint..."
pnpm lint-staged

# 2. Type check
echo "ğŸ”§ Running typecheck..."
pnpm typecheck

# 3. Run unit tests (fast, <30s target)
echo "ğŸ§ª Running unit tests..."
pnpm test:unit -- --run

# 4. Check AuthZ coverage
echo "ğŸ” Checking Cedar authorization coverage..."
pnpm test:authz-coverage

# 5. Check component usage (warning-only, non-blocking)
echo "ğŸ§© Checking shared component usage..."
pnpm test:component-usage || echo "âš ï¸  Component usage warnings (non-blocking)"

echo "âœ… All pre-commit checks passed!"
